<body>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
<!-- Header -->
{{>menu_partial}}
<header class="bg-primary text-center py-5 mb-4">
  <div class="container">
    <h1 class="font-weight-light text-white">TUS TAMAGOCHI</h1>
  </div>
</header>

<!-- Page Content -->

<div class="container">

  <div class="row">
    <div class=" col-xl-3 col-md-6 mb-4  " id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <div class="card border-0 shadow">
          <img src="https://img.icons8.com/ios/500/000000/plus.png" class="card-img-top" alt="...">
          <div class="card-body text-center">
            <h5 class="card-title mb-0">CREAR TAMAGOCHI</h5>
          </div>
        </div>
      <div class="dropdown-menu" id="my_dropDown" aria-labelledby="dropdownMenuButton">
        <form onsubmit="return false" id="my_form">
          <label for="fname">Nombre Tamagochi</label><br>
          <input type="text" id="fname" name="nombre" value="John"><br>
          <input type="submit" value="Crear" onclick='CreateTamagochi(document.forms["my_form"]["nombre"].value)'>
        </form>
      </div>
    </div>
    {{# each tamagochis}}
      {{> selection_tamagochi_partial}}
    {{/each}}
  </div>
  <!-- /.row -->
</div>
<!-- /.container -->

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
